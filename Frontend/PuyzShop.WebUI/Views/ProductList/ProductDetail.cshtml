@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürün Listesi</a>
                <span class="breadcrumb-item active">Ürün Detayı</span>
            </nav>
        </div>
    </div>
</div>


        <!-- Shop Detail Start -->
    <div class="container-fluid pb-5">
        <div class="row px-xl-5">

            @await Component.InvokeAsync("ProductDetailImageSliderComponentPartial")

            @await Component.InvokeAsync("ProductDetailFeatureComponentPartial")

        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Ürün Açıklaması</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün Bilgileri</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Değerlendirmeler (73)</a>
                    </div>
                    <div class="tab-content">
                        @await Component.InvokeAsync("ProductDetailDescriptionComponentPartial")
                        @await Component.InvokeAsync("ProductDetailInformationComponentPartial")
                        @await Component.InvokeAsync("ProductDetailReviewComponentPartial")
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Shop Detail End -->


   